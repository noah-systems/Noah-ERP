FROM node:20-alpine AS builder
WORKDIR /app

# Instala dependências na raiz
COPY package.json /app/
RUN npm install && npm cache clean --force

# Copia arquivos necessários para build do frontend
COPY tsconfig.json tsconfig.node.json vite.config.ts /app/
COPY index.html /app/
COPY src /app/src
COPY public /app/public

# Variáveis de build podem ser passadas via ARG/ENV conforme necessário
ENV VITE_API_BASE=/api

RUN npm run build:web

# Nginx para servir os assets e proxy /api
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]