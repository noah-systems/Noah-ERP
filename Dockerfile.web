FROM node:20-bookworm-slim AS web-deps
WORKDIR /work
COPY package.json package-lock.json* pnpm-lock.yaml* yarn.lock* .npmrc* ./
COPY vendor ./vendor
RUN npm ci --no-audit --no-fund || npm install --no-audit --no-fund --legacy-peer-deps
COPY . .
RUN npm install -D @rollup/rollup-linux-x64-gnu --no-audit --no-fund --legacy-peer-deps \
    && (npm rebuild rollup || true)
RUN npm run build:web

FROM nginx:alpine AS web-runtime
COPY --from=web-deps /work/dist /usr/share/nginx/html
