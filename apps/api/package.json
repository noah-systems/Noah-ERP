{
  "name": "noah-api",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:prod": "npm run build && npm run start",
    "db:migrate": "sequelize --config sequelize.config.js db:migrate",
    "db:seed": "sequelize --config sequelize.config.js db:seed:all",
    "db:reset": "sequelize --config sequelize.config.js db:migrate:undo:all && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.8.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.1",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.10",
    "sequelize-cli": "^6.6.2",
    "typescript": "^5.5.4"
  }
}
