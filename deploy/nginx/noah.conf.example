server {
  listen 443 ssl http2;
  server_name erp.noahomni.com.br;

  root /var/www/erp/dist;
  index index.html;

  # SPA fallback
  location / {
    try_files $uri /index.html;
  }
}

server {
  listen 443 ssl http2;
  server_name erpapi.noahomni.com.br;

  # API (remove /api do caminho antes de enviar ao node)
  location /api/ {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # CORS simples (opcional; se j√° faz no Express, ok)
    add_header Access-Control-Allow-Origin https://erp.noahomni.com.br always;
    add_header Access-Control-Allow-Headers Authorization,Content-Type always;
    add_header Access-Control-Allow-Methods GET,POST,PUT,PATCH,DELETE,OPTIONS always;
    if ($request_method = OPTIONS) { return 204; }

    proxy_pass http://127.0.0.1:3000/; # barra no final remove o prefixo /api
  }

  # health direto
  location = /ping { return 200 '{"ok":true}'; add_header Content-Type application/json; }
}
