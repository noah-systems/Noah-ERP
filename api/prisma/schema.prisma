generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  role         String   @default("ADMIN_NOAH")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model DashboardMetrics {
  id            Int      @id
  leads         Int      @default(0)
  opportunities Int      @default(0)
  implantacao   Int      @default(0) @map("implantation")
  canceladas    Int      @default(0) @map("canceled")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("dashboard_metrics")
}
