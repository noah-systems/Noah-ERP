generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN_NOAH
  SUPPORT_NOAH
  SELLER
  ADMIN_PARTNER
}

enum LeadStage {
  NUTRICAO
  QUALIFICADO
  NAO_QUALIFICADO
}

enum OpportunityStage {
  NEGOCIACAO
  APRESENTACAO
  PROPOSTA
  TRIAL
  VENC_TRIAL
  VENDAS
}

enum ImplementationStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  passwordHash String
  role         UserRole       @default(SELLER)
  sessions     Session[]
  leads        Lead[]         @relation("LeadOwner")
  opportunities Opportunity[] @relation("OpportunityOwner")
  notes        Note[]
  attachments  Attachment[]   @relation("AttachmentUploader")
  activities   ActivityLog[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenId   String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id            String           @id @default(cuid())
  companyName   String
  contactName   String?
  contactEmail  String?
  contactPhone  String?
  segment       String?
  employees     Int?
  origin        String?
  notes         String?
  stage         LeadStage        @default(NUTRICAO)
  order         Int              @default(0)
  ownerId       String?
  owner         User?            @relation("LeadOwner", fields: [ownerId], references: [id])
  opportunities Opportunity[]
  cancellations Cancellation[]
  notesList     Note[]           @relation("LeadNotes")
  attachments   Attachment[]     @relation("LeadAttachments")
  activityLogs  ActivityLog[]    @relation("LeadActivity")
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([stage, order])
}

model Opportunity {
  id             String             @id @default(cuid())
  name           String
  value          Decimal?           @db.Decimal(12, 2)
  contactName    String?
  ownerId        String?
  owner          User?              @relation("OpportunityOwner", fields: [ownerId], references: [id])
  leadId         String?
  lead           Lead?              @relation(fields: [leadId], references: [id])
  stage          OpportunityStage   @default(NEGOCIACAO)
  order          Int                @default(0)
  modules        String[]           @default([])
  trialEndsAt    DateTime?
  workspaceSlug  String?
  implementation Implementation?
  cancellations  Cancellation[]
  notesList      Note[]             @relation("OpportunityNotes")
  attachments    Attachment[]       @relation("OpportunityAttachments")
  activityLogs   ActivityLog[]      @relation("OpportunityActivity")
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@index([stage, order])
}

model Implementation {
  id             String               @id @default(cuid())
  opportunityId  String               @unique
  opportunity    Opportunity          @relation(fields: [opportunityId], references: [id])
  scheduledFor   DateTime
  status         ImplementationStatus @default(SCHEDULED)
  notes          String?
  completedAt    DateTime?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
}

model Cancellation {
  id            String        @id @default(cuid())
  leadId        String?
  opportunityId String?
  reason        String
  details       String?
  cancelledAt   DateTime      @default(now())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  lead          Lead?         @relation(fields: [leadId], references: [id])
  opportunity   Opportunity?  @relation(fields: [opportunityId], references: [id])
}

model Note {
  id            String        @id @default(cuid())
  content       String
  leadId        String?
  opportunityId String?
  userId        String?
  lead          Lead?         @relation("LeadNotes", fields: [leadId], references: [id])
  opportunity   Opportunity?  @relation("OpportunityNotes", fields: [opportunityId], references: [id])
  user          User?         @relation(fields: [userId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Attachment {
  id            String        @id @default(cuid())
  fileName      String
  fileUrl       String
  leadId        String?
  opportunityId String?
  uploadedById  String?
  lead          Lead?         @relation("LeadAttachments", fields: [leadId], references: [id])
  opportunity   Opportunity?  @relation("OpportunityAttachments", fields: [opportunityId], references: [id])
  uploadedBy    User?         @relation("AttachmentUploader", fields: [uploadedById], references: [id])
  createdAt     DateTime      @default(now())
}

model ActivityLog {
  id            String       @id @default(cuid())
  userId        String?
  leadId        String?
  opportunityId String?
  entityType    String
  entityId      String
  action        String
  description   String?
  metadata      Json?
  user          User?        @relation(fields: [userId], references: [id])
  lead          Lead?        @relation("LeadActivity", fields: [leadId], references: [id])
  opportunity   Opportunity? @relation("OpportunityActivity", fields: [opportunityId], references: [id])
  createdAt     DateTime     @default(now())
}
