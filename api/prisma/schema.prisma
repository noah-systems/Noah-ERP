generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN_NOAH
  SALES
  IMPLEMENTATION
}

enum LeadStage {
  NUTRICAO
  QUALIFICADO
  NAO_QUALIFICADO
}

enum OpportunityStage {
  NEGOCIACAO
  APRESENTACAO
  PROPOSTA
  TRIAL
  VENC_TRIAL
  VENDAS
}

enum ImplementationStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  name         String
  passwordHash String
  role         UserRole   @default(ADMIN_NOAH)
  sessions     Session[]
  leads        Lead[]     @relation("LeadOwner")
  opportunities Opportunity[] @relation("OpportunityOwner")
  notes        Note[]     @relation("NoteCreator")
  activityLogs ActivityLog[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Lead {
  id            String           @id @default(cuid())
  name          String
  email         String?
  phone         String?
  company       String?
  stage         LeadStage        @default(NUTRICAO)
  order         Int              @default(0)
  value         Decimal?         @db.Decimal(12, 2)
  source        String?
  owner         User?            @relation("LeadOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  ownerId       String?
  notes         Note[]
  attachments   Attachment[]
  opportunities Opportunity[]
  cancellations Cancellation[]
  activityLogs  ActivityLog[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([stage, order])
}

model Opportunity {
  id             String            @id @default(cuid())
  title          String
  value          Decimal?          @db.Decimal(12, 2)
  stage          OpportunityStage  @default(NEGOCIACAO)
  order          Int               @default(0)
  lead           Lead              @relation(fields: [leadId], references: [id], onDelete: Cascade)
  leadId         String
  owner          User?             @relation("OpportunityOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  ownerId        String?
  expectedClose  DateTime?
  implementation Implementation?
  notes          Note[]
  attachments    Attachment[]
  cancellations  Cancellation[]
  activityLogs   ActivityLog[]
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([stage, order])
}

model Implementation {
  id             String               @id @default(cuid())
  opportunity    Opportunity          @relation(fields: [opportunityId], references: [id], onDelete: Cascade)
  opportunityId  String               @unique
  scheduledAt    DateTime
  status         ImplementationStatus @default(SCHEDULED)
  completedAt    DateTime?
  notes          String?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
}

model Cancellation {
  id             String      @id @default(cuid())
  lead           Lead?       @relation(fields: [leadId], references: [id], onDelete: SetNull)
  leadId         String?
  opportunity    Opportunity? @relation(fields: [opportunityId], references: [id], onDelete: SetNull)
  opportunityId  String?
  reason         String?
  requestedBy    String?
  effectiveDate  DateTime?
  createdAt      DateTime    @default(now())
}

model Note {
  id           String    @id @default(cuid())
  content      String
  lead         Lead?     @relation(fields: [leadId], references: [id], onDelete: SetNull)
  leadId       String?
  opportunity  Opportunity? @relation(fields: [opportunityId], references: [id], onDelete: SetNull)
  opportunityId String?
  createdBy    User?     @relation("NoteCreator", fields: [createdById], references: [id], onDelete: SetNull)
  createdById  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Attachment {
  id           String    @id @default(cuid())
  fileName     String
  url          String
  lead         Lead?     @relation(fields: [leadId], references: [id], onDelete: SetNull)
  leadId       String?
  opportunity  Opportunity? @relation(fields: [opportunityId], references: [id], onDelete: SetNull)
  opportunityId String?
  createdAt    DateTime  @default(now())
}

model ActivityLog {
  id            String    @id @default(cuid())
  action        String
  targetType    String
  targetId      String
  metadata      Json?
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId        String?
  lead          Lead?     @relation(fields: [leadId], references: [id], onDelete: SetNull)
  leadId        String?
  opportunity   Opportunity? @relation(fields: [opportunityId], references: [id], onDelete: SetNull)
  opportunityId String?
  createdAt     DateTime  @default(now())
}
