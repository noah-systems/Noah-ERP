  "scripts": {
    "dev:web": "vite",
    "dev": "npm run dev:web",
    "build:web": "vite build",
    "build": "npm run build:web",
    "preflight": "node scripts/preflight.mjs",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:degraded": "tsc -p tsconfig.degraded.json --noEmit",
    "preview:web": "vite preview --port 5173",
    "build:api": "npm --prefix apps/api run build",
    "start:api": "node apps/api/dist/main.js",
    "ci:probe-npm": "node -e \"require('https').get('https://registry.npmjs.org/@types%2Freact',r=>{process.exit(r.statusCode>=200&&r.statusCode<400?0:1)})\"",
    "ci:full": "npm ci && npm run typecheck && npm run build:api && npm run build:web",
    "ci:degraded": "npm run typecheck:degraded && npm run build:web",
    "api:prisma": "prisma generate --schema prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema prisma/schema.prisma",
    "prepare": "true",
    "qa:smoke": "node scripts/qa-smoke.mjs"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "node": ">=20"
  }
}
